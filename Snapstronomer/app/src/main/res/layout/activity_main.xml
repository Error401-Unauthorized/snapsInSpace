<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#32bbdb"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/searcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search for Satellites"
        tools:layout_editor_absoluteX="1194dp"
        tools:layout_editor_absoluteY="172dp" />

    <GridLayout
        android:id="@+id/Satellites"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="34dp">

        <Button
            android:id="@+id/Satellite1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Satellite 1" />

        <ImageButton
            android:id="@+id/Satellite2"
            android:layout_width="match_parent"
            android:layout_row="2"
            android:layout_column="0"
            android:adjustViewBounds="true"
            android:background="@null"
            android:cropToPadding="false"
            android:maxHeight="300px"
            android:scaleType="fitStart"
            android:src="@drawable/stickerfalcsat" />

        <ImageButton
            android:id="@+id/Satellite3"
            android:layout_width="match_parent"
            android:layout_row="4"
            android:layout_column="0"
            android:adjustViewBounds="true"
            android:background="@null"
            android:maxHeight="300px"
            android:scaleType="fitStart"
            android:src="@drawable/stickergps" />

        <ImageButton
            android:id="@+id/Satellite4"
            android:layout_width="match_parent"
            android:layout_row="3"
            android:layout_column="0"
            android:adjustViewBounds="true"
            android:background="@null"
            android:maxHeight="300px"
            android:scaleType="fitStart"
            android:src="@drawable/stickerfalcsat" />

        <ImageButton
            android:id="@+id/Satellite5"
            android:layout_width="match_parent"
            android:layout_row="7"
            android:layout_column="0"
            android:adjustViewBounds="true"
            android:background="@null"
            android:cropToPadding="false"
            android:maxHeight="300px"
            android:scaleType="fitStart"
            android:src="@drawable/stickerfalcsat" />

        <ImageButton
            android:id="@+id/Satellite6"
            android:layout_width="match_parent"
            android:layout_row="5"
            android:layout_column="0"
            android:adjustViewBounds="true"
            android:background="@null"
            android:maxHeight="300px"
            android:scaleType="fitStart"
            android:src="@drawable/stickergps" />

        <ImageButton
            android:id="@+id/Satellite7"
            android:layout_width="match_parent"
            android:layout_row="3"
            android:layout_column="0"
            android:adjustViewBounds="true"
            android:background="@null"
            android:maxHeight="300px"
            android:scaleType="fitStart"
            android:src="@drawable/stickeriss" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>